package thuchanh;

public class Nguoi {

	private String ht;
	private String ns;
	private boolean gt;
	public String getHt() {
		return ht;
	}
	public void setHt(String ht) {
		this.ht = ht;
	}
	public String getNs() {
		return ns;
	}
	public void setNs(String ns) {
		this.ns = ns;
	}
	public boolean getGt() {
		return gt;
	}
	public void setGt(boolean gt) {
		this.gt = gt;
	}
	public Nguoi(String ht, String ns, boolean gt) {
		this.ht = ht;
		this.ns = ns;
		this.gt = gt;
	}
	public Nguoi() {
		this.ht = null;
		this.ns = null;
		this.gt = false;
	}
	public void xuat() {
		System.out.println(this.ht + " - " + this.ns + " - "+ this.gt);
	}
	
	
	
}
